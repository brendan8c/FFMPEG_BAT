@echo off
color a
echo.
echo.
set /P URL="[Enter video URL] "
echo ----------------------------------------------------------------------------------------------------------------------
goto formatList

:formatList
echo.
echo ----------------------------------------------------------------------------------------------------------------------
youtube-dl -F %URL%
echo ----------------------------------------------------------------------------------------------------------------------
goto selection


:selection
echo.
echo ----------------------------------------------------------------------------------------------------------------------
echo 1) Video + Audio
echo 2) Single format (Audio only / Video only)
echo.
set /P option="Select option: "
if %option% == 1 (goto download)
if %option% == 2 (goto downloadSingle)
echo.
echo Unknown value
echo ----------------------------------------------------------------------------------------------------------------------
goto selection

:download
echo ----------------------------------------------------------------------------------------------------------------------
echo.
echo ----------------------------------------------------------------------------------------------------------------------
set /P video="Select video format: "
set /P audio="Select audio format: "
echo.
youtube-dl -o Result/%%(title)s.%%(ext)s -f %video%+%audio% -i --ignore-config --hls-prefer-native %URL%
echo ----------------------------------------------------------------------------------------------------------------------
echo.
pause
exit

:downloadSingle
echo ----------------------------------------------------------------------------------------------------------------------
echo.
echo ----------------------------------------------------------------------------------------------------------------------
set /P format="Select format: "
echo.
youtube-dl -o Result/%%(title)s.%%(ext)s -f %format% -i --ignore-config --hls-prefer-native %URL%
echo ----------------------------------------------------------------------------------------------------------------------
echo.
pause
exit